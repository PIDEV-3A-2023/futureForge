{% extends 'base.html.twig' %}

{% block title %}ReservationCovoiturage index
{% endblock %}

{% block body %}
	<h1>Reservation Covoiturage
	</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Prenom</th>
				<th>PntRencontre</th>
				<th>Distination</th>
				<th>NbrPlace</th>
				<th>Date</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for reservation_covoiturage in reservation_covoiturages %}
