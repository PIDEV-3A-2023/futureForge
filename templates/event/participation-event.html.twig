{% extends 'base.html.twig' %}

{% block title %}Participer à l'événement "{{ event.titre }}"{% endblock %}

{% block body %}
  <h1>Participer à l'événement "{{ event.titre }}"</h1>

  {% if message is defined %}
    <div class="alert alert-info">{{ message }}</div>
  {% endif %}

  <form method="POST">
    {{ form_start(form) }}
    {{ form_widget(form) }}

    <button type="submit" class="btn btn-primary">Participer</button>
    <a href="{{ path('display_event') }}" class="btn btn-secondary">Retour à la liste des événements</a>
    {{ form_end(form) }}
  </form>
{% endblock %}